
<% if @open_ach_url_1 %>
  <img src="/images/outline_open.png" alt="Lvl. 1" class="img-achievement-1">
<% end %>

<% if @open_ach_url_2 %>
  <img src="/images/solid_open.png" alt="Lvl. 2" class="img-achievement-2">
<% end %>

<% if @open_ach_url_3 %>
  <img src="/images/flat_open.png" alt="Lvl. 3" class="img-achievement-3">
<% end %>

<% if @days_open > 365 %>
  <br>Your Github account has been active for over <%=@years_open.to_i%> years<br>
<% else %>
  <br>Your Github account has been active for <%=@days_open%> days<br>
<% end %>

<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="<%= @progress_bar_acc_open.to_i %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @progress_bar_acc_open.to_i %>%;">
    <%=@progress_bar_acc_open.to_i%>%
  </div>
</div>